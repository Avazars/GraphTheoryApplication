<Window x:Class="WpfApp1.MainWindow"
        Foreground="Black"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000" ResizeMode="NoResize">
    <Canvas>
        <Canvas Background="Black" x:Name="DrawingGrid" MouseLeftButtonDown="DrawingGrid_OnMouseLeftButtonDown" Height="748" Width="1000" Canvas.Top="36.02" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ToolBar Background="Black" Width="1000" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1">
            <ToggleButton x:Name="VertexButton" Content="Vertex" Height="30" VerticalAlignment="Top" Width="50" Foreground="White"/>
            <ToggleButton x:Name="EdgeButton" Content="Edge" Height="30" VerticalAlignment="Top" Width="50" Foreground="White"/>
            <ToggleButton Content="ToggleButton" Height="30" VerticalAlignment="Top" Width="50" Foreground="White"/>
            <ToggleButton Content="ToggleButton" Height="30" VerticalAlignment="Top" Width="50" Foreground="White"/>
        </ToolBar>
    </Canvas>
</Window>
